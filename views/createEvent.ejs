<%- include('partials/header') -%>
<div class="back">
    <h1>Create Event</h1>
    

    <form action="/createEvent" method="post" enctype="multipart/form-data" class="submitForm">
        <label for="startDate">User Name</label>
        <input type="text" placeholder="User Name" name="username"><br><br>

        <label for="startDate">Event Name</label>
        
        <input type="text" placeholder="Event Name" name="Name" id="name"><br><br>

        
        <label for="startDate">Event Description</label>
        <input type="text" placeholder="Descripion" name="description" id="description"><br><br>

        <label for="startDate">Enter City</label>
        <select name="city">
            <option >Bengaluru</option>
            <option >Mumbai</option>
            <option >Kolkata</option>
            <option >Hyderabad</option>
            <option >Delhi</option>
        </select><br></br>

        <label for="startDate">Enter Location</label>
        <input type="text" placeholder="Location" name="location" id="location"><br><br>

        <label for="startDate">Maximum Capacity</label>
        <input type="number" placeholder="Capacity" name="capacity" id="capacity"><br><br>

        <label for="startDate">Enter the Starting Date</label>
        <input type="date" name="startDate" id="startingDate"><br><br>

        <label for="endDate">Enter the Ending Date</label>
        <input type="date" name="endDate" id="endingDate"><br><br>

        <label for="startTime">Enter the Starting Time</label>
        <input type="time" name="startingTime"><br><br>

        <label for="endTime">Enter the Ending Time</label>
        <input type="time" name="endTime" id="endingTime"><br><br>

        <label for="startDate">Ticket Price</label>
        <input type="number" placeholder="Price" name="price" id="price"><br><br>


        


        <input type="file" name="file" >



        <button type="submit" class="btn">CREATE</button>
    </form>
</div> 
