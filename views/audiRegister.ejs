<%- include('partials/header') -%>
<%- include ('partials/messages') -%>
<form action="/audiregister" method="POST">
    <div class="register-form">
        <div class="register-card">
            <div class="register-img">
                <%- include('partials/welcome') -%>
            </div>
            <div class="register-credentials">
            <div>
                <label for="username">Username</label>
                <input
                type="text"
                name="username"
                placeholder="Enter User Name"
                value="<% typeof name != 'undefined' ? name : '' %>"
                />
            </div>
            <div>
                <label for="name">Name</label>
                <input
                type="text"
                name="name"
                placeholder="Enter Name"
                value="<% typeof name != 'undefined' ? name : '' %>"
                />
            </div>
            <div>
                <label for="phone">Mobile Number</label>
                <input
                type="tel"
                name="audiPhNum"
                placeholder="Mobile number"
                value="<% typeof name != 'undefined' ? name : '' %>"
                />
            </div>
            <div>
                <label for="age">Age</label>
                <input
                type="number"
                name="audiAge"
                placeholder="Age"
                min="1"
                value="<% typeof name != 'undefined' ? name : '' %>"
                />
            </div>
            <div>
                <label for="gender">Gender</label>
                <select name="gender" input type>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    
                 </select>
            </div>
            <div>
                <label for="email">E-Mail</label>
                <input
                name="email"
                placeholder="Enter E-Mail"
                value="<% typeof email != 'undefined' ? email : '' %>"
                />
            </div>
            <div>
                <label for="password">Password</label>
                <input
                type="password"
                name="password"
                placeholder="Enter Password"
                value="<% typeof email != 'undefined' ? password : '' %>"
                />
            </div>
            <div>
                <label for="password2">Confirm Password</label>
                <input
                type="password"
                name="password2"
                placeholder="Enter Password"
                value="<% typeof email != 'undefined' ? password2 : '' %>"
                />
            </div>
            <div>
                <input
                name="role"
                value="AUDIENCE" style="display: none;"
                />
            </div>
            <label for="prefEve">Event Type</label>
                <select name="preferred" input type>
                    <option value="preferredEvent">Enter Preferred Event</option>
                    <option value="Technical">Technical</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Cultural">Cultural</option>
                    <option value="Sports">Sports</option>
                    <option value="Movies">Movies and Drama</option>
                </select>

            <button type ="submit" >Register</button>
            <p>Have an account?<a href="/login">Login</a></p>
            </div>
        </div>
</form>

<%- include('partials/footer') -%>