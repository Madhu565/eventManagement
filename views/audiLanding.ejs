<%- include('partials/header') -%>
<div class="audi-landing">
    <div class="audiLanding-cover">
        <div class="audiLanding-header">
            <a  href="/collegeEvents"> College Events</a> 
            <a  id="filterBtn" >Select City</a>
            <a  href="/audilogout">Logout</a>  
        </div>
           <div class="audi-landing-contents">
               <div class="landing-center">
                <div>
                    <h1>GrabMySeat </h1>          
                </div>
                <div class="search">
                    <div class="searchbar">
                        <div>
                            <input id="search" type="text" name="Search" placeholder="search for events">
                         </div>
                        <div id="match-list"></div>
                    </div>
                    <div class="filter">
                        <div id="my-Modal" class="filterModal">
                            <div class="filterModal-content">
                                <span class="filterClose">&times;</span>
                                <div class="city">
                                        <h4>Kolkata</h4>
                                        <h4>Delhi</h4>
                                        <h4>Bengaluru</h4>
                                        <h4>Hyderabad</h4>
                                        <h4>Mumbai</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>

        <div class="all-events">
            <h1>Top Events Across INDIA</h1>
            <% var count = 0 %>
            <div class="event-cate">
                <%  arr.forEach(topEvent => { %>
                    <% if(count <=3){ %>
                    <div class="event-box">
                        <a href="/cities/<%=topEvent.city%>/<%=topEvent._id%>">
                        <img src="data:image/<%=topEvent.image.contentType%>;base64,<%=topEvent.image.data.toString('base64')%>">
                        <p class="event-name"><%=topEvent.eventName%></p> </a>
                        <div class="event-details">
                            <p><span>Venue </span>: <%=topEvent.city%>, <%=topEvent.location%></p>
                            <p><span>Starts</span>: <%=topEvent.startDate%></p>
                            <p><span>₹ </span>: <%=topEvent.price%></p>
                        </div>
                        <div class="event-book">
                            <a  href="/cities/<%=topEvent.city%>/<%=topEvent._id%>">Book Event</a>
                        </div>
                        <% count++ %>
                    </div>
                        <% } %>
                    
                        <% }) %>
                   
            </div>  
            <br><br>
            <h1>Handpicked Events for YOU</h1>
            <% var count1 = 0 %>
            <div class="event-cate">
                <%  passedEvent.forEach(prefEvent => { %>
                    <% if(count1 <=3){ %>
                    <div class="event-box" >
                        <a href="/cities/<%=prefEvent.city%>/<%=prefEvent._id%>">
                        <img src="data:image/<%=prefEvent.image.contentType%>;base64,<%=prefEvent.image.data.toString('base64')%>">
                        <p class="event-name"><%=prefEvent.eventName%></p></a>
                        <div class="event-details">
                            <p><span>Venue  </span> : <%=prefEvent.city%>, <%=prefEvent.location%></p>
                            <p><span>Starts </span>: <%=prefEvent.startDate%></p>
                            <p><span>₹ </span>: <%=prefEvent.price%></p>
                        </div>
                        <div class="event-book">
                            <a  href="/cities/<%=prefEvent.city%>/<%=prefEvent._id%>">Book Event</a>
                        </div>
                        <% count++ %>
                    </div>
                        <% } %>
                        <% }) %>   
            </div>
        </div>

        <script>
            var modal = document.getElementById("my-Modal");

            var btn = document.getElementById("filterBtn");

            var span = document.getElementsByClassName("filterClose")[0];

            btn.onclick = function() {
            modal.style.display = "flex";
            }

            span.onclick = function() {
            modal.style.display = "none";
            }

            window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
            }
        </script>
</div> 

<%- include('partials/footer') -%>
